<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.dao.TransBillInfoDAO">
    <resultMap id="BaseResultMap" type="com.example.entity.po.TransBillInfo">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="bill_id" property="billId" jdbcType="VARCHAR"/>
        <result column="super_bill_id" property="superBillId" jdbcType="VARCHAR"/>
        <result column="bill_num" property="billNum" jdbcType="VARCHAR"/>
        <result column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="balance" property="balance" jdbcType="VARCHAR"/>
        <result column="bill_amt" property="billAmt" jdbcType="VARCHAR"/>
        <result column="bill_type" property="billType" jdbcType="VARCHAR"/>
        <result column="repay_state" property="repayState" jdbcType="VARCHAR"/>
        <result column="bill_state" property="billState" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,bill_id,super_bill_id,bill_num,balance,bill_amt,bill_type,repay_state,bill_state
    </sql>

    <sql id="Overdue_Detail_List">
        t1.bill_id,t1.super_bill_id,t1.bill_num,t1.balance,t1.bill_amt,t2.bill_type,t1.repay_state
    </sql>



    <!--根据账期编号查询按月逾期账单列表-->
    <select id="selectOverdueBillGroupByBillNum" resultType="java.util.Map" parameterType="java.lang.String">
        SELECT
        bill_num as billNum, SUM(balance)as totalBalance ,SUM(bill_amt) as totalBillAmt
        FROM
        t_trans_bill_info
        WHERE
        user_id = #{userId}
        AND bill_type =  #{billType}
        GROUP BY bill_num
    </select>

    <!--查询逾期账单明细集合数据-->
    <select id="selectOverdueBillDetail" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT
        <include refid="Overdue_Detail_List"/>
        FROM
        t_trans_bill_info t1 left join t_trans_bill_info t2 on t1.super_bill_id = t2.bill_id and t1.bill_type = #{billType}
        WHERE
        t1.user_id = #{userId}
        AND t2.bill_num =  #{billNum}
        AND t1.repay_state = #{repayState}
    </select>

</mapper>